@model BookStoreApi.Models.Book

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Деталі книги";
}

<div class="container mt-4">
    <h1 class="mb-4">Деталі книги</h1>

    <div class="card">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Назва</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Автор</dt>
                <dd class="col-sm-9">@Model.Author</dd>

                <dt class="col-sm-3">Рік публікації</dt>
                <dd class="col-sm-9">@Model.PublishedYear</dd>

                <dt class="col-sm-3">Жанр</dt>
                <dd class="col-sm-9">@Model.Genre</dd>

                <dt class="col-sm-3">Ціна</dt>
                <dd class="col-sm-9">@Model.Price ₴</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редагувати</a>
        <a asp-action="Index" class="btn btn-secondary ms-2">Назад до списку</a>
    </div>
</div>
